<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 风扇叶子loading -->
    <declare-styleable name="LeafLoadingLayout">
        <attr name="lll_bg_color" format="color|reference"/>
        <attr name="lll_progress_color" format="color|reference"/>
        <attr name="lll_fan_bg_color" format="color|reference"/>
        <attr name="lll_fan_border_color" format="color|reference"/>
        <attr name="lll_fan_border_width" format="float|reference|dimension"/>
        <attr name="lll_fan_text_color" format="color|reference"/>
        <attr name="lll_fan_text_size" format="float|reference|dimension"/>
    </declare-styleable>

    <!-- 圆角BitmapShader -->
    <declare-styleable name="ShapeShaderImageView">
        <attr name="shiv_bg_color" format="color|reference"/>
        <attr name="shiv_border_color" format="color|reference"/>
        <attr name="shiv_border_width" format="reference|dimension"/>
        <attr name="shiv_radius" format="dimension|reference"/>
        <attr name="shiv_radius_x" format="dimension|reference"/>
        <attr name="shiv_radius_y" format="dimension|reference"/>
        <attr name="shiv_top_left" format="boolean"/>
        <attr name="shiv_top_right" format="boolean"/>
        <attr name="shiv_bottom_left" format="boolean"/>
        <attr name="shiv_bottom_right" format="boolean"/>
    </declare-styleable>

    <!-- 圆角Xfermode -->
    <declare-styleable name="ShapeXfermodeImageView">
        <attr name="sxiv_bg_color" format="color|reference"/>
        <attr name="sxiv_border_color" format="color|reference"/>
        <attr name="sxiv_border_width" format="reference|dimension"/>
        <attr name="sxiv_radius" format="dimension|reference"/>
        <attr name="sxiv_radius_x" format="dimension|reference"/>
        <attr name="sxiv_radius_y" format="dimension|reference"/>
        <attr name="sxiv_top_left" format="boolean"/>
        <attr name="sxiv_top_right" format="boolean"/>
        <attr name="sxiv_bottom_left" format="boolean"/>
        <attr name="sxiv_bottom_right" format="boolean"/>
    </declare-styleable>

    <!-- 圆形图片 -->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_color" format="color|reference"/>
        <attr name="civ_border_width" format="reference|dimension"/>
    </declare-styleable>
</resources>