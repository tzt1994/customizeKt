<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tvDraw1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivDrawCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/draw_code"/>

        <TextView
            android:id="@+id/tvDraw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivDrawIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/draw_icon"/>

        <TextView
            android:id="@+id/tvDraw3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="1. 写在 super.draw() 的下面"/>

        <TextView
            android:id="@+id/tvDraw4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDraw5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="2. 写在 super.draw() 的上面"/>

        <TextView
            android:id="@+id/tvDraw6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDraw1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Hello TangZhenTao"/>

        <TextView
            android:id="@+id/tvDraw7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDraw2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Hello TangZhenTao"
            android:background="#66bb6a"/>

        <TextView
            android:id="@+id/tvDraw8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tzt.customize.order.widget.DrawAboveView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Hello TangZhenTao"/>

        <TextView
            android:id="@+id/tvDraw9"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>